{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend (Node/Express)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:server:node18"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Frontend (Vite)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:web:node18"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Frontend (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "presentation": {
        "group": "frontend"
      }
    }
  ],
  "compounds": [
    {
      "name": "Full Stack (Vite + API)",
      "configurations": [
        "Backend (Node/Express)",
        "Frontend (Vite)",
        "Frontend (Chrome)"
      ]
    }
  ]
}
